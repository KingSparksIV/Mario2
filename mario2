package com.company;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner mario = new Scanner(System.in);
        System.out.println("How many layers do you want your pyramid to be? (Please choose a number between 1 and 8)");
        int max;
        max = mario.nextInt();
        if (max > 8) {
            System.out.print("Invalid input, please input a number between 1 and 8");
        }
        if (max < 0) {
            System.out.print("Invalid input, please input a number between 1 and 8");
        }
        if (max <= 8) { for (int i = 0; i < max; i++) {
            for (int w = -1; w < max - i - 1; w++) {
                System.out.print(" ");
            }
            for (int y = -1; y < i * 2; y++) {
                System.out.print("#");

            }
            System.out.println("");
        }
        }
    }
}
